{
  "name": "hostelhub",
  "version": "1.0.0",
  "main": "Backend/server.js",
  "scripts": {
    "dev": "NODE_ENV=development nodemon Backend/server.js",
    "start": "NODE_ENV=production node Backend/server.js",
    "build": "npm install && cd Frontend && npm install && npm install -g vite && npm run build && cd ..",
    "install-all": "npm install && npm install --prefix Frontend && npm install --prefix Backend",
    "dev:frontend": "cd Frontend && npm run dev",
    "dev:backend": "NODE_ENV=development nodemon Backend/server.js",
    "dev:all": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\""
  },
  "keywords": [],
  "author": "",
  "type": "module",
  "license": "ISC",
  "description": "HostelHub - A hostel management system",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "mongoose": "^8.14.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
